<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DontExpireFinal"
             x:Class="DontExpireFinal.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="PrimaryTextColor">#000000</Color>
            <Color x:Key="SecondaryTextColor">#FFFFFF</Color>
            <Color x:Key="PrimaryBackgroundColor">#FFFFFF</Color>
            <Color x:Key="SecondaryBackgroundColor">#000000</Color>
            <Style TargetType="ListView" x:Key="LVStyle">
                <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryBackgroundColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

